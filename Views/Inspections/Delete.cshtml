@model autopark.Models.Inspection

@{
    ViewData["Title"] = "Удаление записи о техосмотре";
}

<h1></h1>

<h4>Удалить данный техосмотр?</h4>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InspNote)
        </dt>
        <dd class = "col-sm-10 text-break">
            @Html.DisplayFor(model => model.InspNote)
        </dd>
        <dt class = "col-sm-2">
            Дата техосмотра
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InspDate)
        </dd>
        <dt class = "col-sm-2">
            ГРЗ автомобиля
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Car.CarNumber)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> <br /><br />
        Перейти к:
        <a asp-action="Details" asp-controller="Cars" asp-route-id="@Model.CarId">автомобилю</a> |
        <a asp-action="Details" asp-controller="Inspections" asp-route-id="@Model.Id">техосмотру</a> 
    </form>
</div>
