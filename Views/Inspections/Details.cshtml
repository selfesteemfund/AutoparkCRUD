@model autopark.Models.Inspection

@{
    ViewData["Title"] = "Подробности о техосмотре" + Model.Id;
}



<h4>Подробности о</h4>

<div>
    <h1>техосмотре №@Model.Id</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InspNote)
        </dt>
        <dd class="col-sm-10  text-break">
            @Html.DisplayFor(model => model.InspNote)
        </dd>
        <dt class="col-sm-2">
            Дата техосмотра 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InspDate)
        </dd>
        <dt class="col-sm-2">
            ГРЗ автомобиля
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.CarNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-route-id="@Model.Car.Id" asp-action="Details" asp-controller="Cars">Назад</a> |
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-controller="Inspections" asp-action="Delete" asp-route-id="@Model.Id">Удалить</a>
</div>
