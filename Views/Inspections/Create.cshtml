@model autopark.Models.Inspection

@{
    ViewData["Title"] = "Добавление записи о техосмотре";
}

<h1>Добавление</h1>

<h4>техосмотра</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarId" class="control-label"></label>
                <select asp-for="CarId" class ="form-control" asp-items="ViewBag.InspCarId"></select>
            </div>
            <div class="form-group">
                <label asp-for="InspNote" class="control-label"></label>
                <input asp-for="InspNote" class="form-control" />
                <span asp-validation-for="InspNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InspDate" class="control-label"></label>
                <input asp-for="InspDate" type="date" class="datepicker form-control"  min="01-01-1995" max="12-31-2020" value="" />
                <span asp-validation-for="InspDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <div>
        <a asp-controller="Cars" asp-action="Index">Перейти к списку автомобилей</a> |
        <a asp-controller="Inspections" asp-action="Index">Перейти к списку техосмотров</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
