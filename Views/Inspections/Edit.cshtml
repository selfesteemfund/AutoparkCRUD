@model autopark.Models.Inspection

@{
    ViewData["Title"] = "Редактирование записи о техосмотре";
}

<h1>Режактирование</h1>

<h4>техосмотра</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CarId" class="control-label"></label>
                <select asp-for="CarId" class="form-control" asp-items="ViewBag.CarId"></select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InspNote" class="control-label"></label>
                <input asp-for="InspNote" class="form-control" />
                <span asp-validation-for="InspNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InspDate" class="control-label"></label>
                <input asp-for="InspDate" class="form-control" />
                <span asp-validation-for="InspDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Обновить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
