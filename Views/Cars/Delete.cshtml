@model autopark.Models.Car

@{
    ViewData["Title"] = Model.CarNumber + " - " + Model.Model + " - Удаление";
}


    <div>
        <h4>Удаление автомобиля приведёт </h4>
        <h4>к удалению всех связанных техосмотров</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Brand)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Brand)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Model)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Model)
            </dd>
            <dt class="col-sm-2">
                Дата выпуска
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReleaseDate)
            </dd>
            <dt class="col-sm-2">
                ГРЗ автомобиля
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CarNumber)
            </dd>
            <dt class="col-sm-2">
                Дата учёта
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RegDate)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" /> |
            <a asp-action="Details" asp-route-id="@Model.Id">Вернуться к автомобилю</a>
        </form>
    </div>
