@model autopark.Models.Car

@{
    ViewData["Title"] = "Отчёт";
}

<h1>Отчёт</h1>

<div>
    <h4>об автомобилях</h4>

    <table class="table w-auto">
        <tr>
            <td>Всего автомобилей: </td>
            <td class="text-left"> @ViewBag.total</td>
            <td></td>
        </tr>
        <tr>
            <td>Автомобили, выпущенные до трёх лет назад:</td>
            <td class="text-left">@ViewBag.LessThanThree</td>
            <td></td>
        </tr>
        <tr>    
            <td>Автомобили, выпущенные более трёх лет назад:</td>
            <td class="text-left">@ViewBag.OlderThanThree</td>
            <td></td>
        </tr>
    </table>
    <div>
        <a asp-action="Index">Вернуться к списку</a>
    </div>
</div>
